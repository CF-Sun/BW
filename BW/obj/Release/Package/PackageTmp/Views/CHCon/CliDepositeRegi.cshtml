    //取得客戶名
    function getCliName() {
        $('#lblCliName').html('');
        if ($.trim($('#txtCliNo').val()) == "")
            return;

        var obj =
        {
            CliID: $.trim($('#txtCliNo').val()),
            LoginACCOUNT:conAccount
