<script>
    //刷新驗證碼
    function refreshCodeImg() {
        $("#code").attr("src", "/Contact/GetValidateCode/" + "?t=" + new Date().getTime());//刷新驗證碼
    }

    function submitContact() {
        if (!CheckValue()) {
            //alert('尚有資料未填寫')
            sweetAlert("尚有資料未填寫!", "", "warning");
            return;
        }
        if ($('#validate').val() == '') {
            //alert('請填寫驗證碼')
            sweetAlert("請填寫驗證碼!", "", "warning");
            return;
        }
        SendContact()
    } 

    function SendContact() {
       // $('#maindiv').jqLoading();
        $.ajax({
            url: '/Contact/SendContact',
            type: 'POST',
            dataType: 'json',
            data: {
                Code: $('#validate').val(),
                Name: $('#txtname').val(),
                Email: $('#txtmail').val(),
                Mobile: $('#txtmobile').val(),
                Content: $('#txtContent').val(),
                Gender: $('input[type=radio][name=Gender]:checked').val(),
                Identity: $('#sele_Identity').val(),
                ContactType: $('#sele_ContactType').val()
            },
            cache: false,
            error: function (jqXHR, textStatus, errorThrown) {
                //alert('發生錯誤,請稍後重新登入')
                sweetAlert("登入失敗!", "發生錯誤,請稍後重新登入", "error");
                window.location.href = "/CH/Contact";
            },
            success: function (result) {
                //$('#maindiv').jqLoading("destroy");
                if (!result) {
                    //alert('驗證碼錯誤');
                    sweetAlert("驗證碼錯誤!", "", "warning");
                    refreshCodeImg();//刷新驗證碼
                    return;
                } else {
                    if (result == "1") {
                        //alert('系統發生錯誤')
                        sweetAlert("系統發生錯誤!", "", "error");
                        refreshCodeImg();//刷新驗證碼
                        return;
                    } else {
                        $('#myModalForLogout').modal('show');
                        StartThisSessionTimer();
                    }
                }
            }
        });
    }

    function BackToIndex() {
        window.location.href = "/CH/Index";
    }

    function CheckValue() {
        if ($('#txtname').val() == '' || $('#txtmail').val() == '' || $('#txtmobile').val() == '' || $('#txtContent').val() == '') 
            return false;
        if ($('input[type=radio][name=Gender]:checked').val() == undefined)
            return false;
        if ($('#sele_Identity').val() == '0' || $('#sele_ContactType').val() == '0' )
            return false;
        return true;
    }

    var timeInSecondsAfterSessionOut = 20; // change this to change session time out (in seconds). 1200
    var secondTick = 0;
    function StartThisSessionTimer() {
        secondTick++;
        var timeLeft = ((timeInSecondsAfterSessionOut - secondTick) / 60).toFixed(0); // in minutes
        timeLeft = timeInSecondsAfterSessionOut - secondTick;

        if (secondTick > timeInSecondsAfterSessionOut) {
            BackToIndex();
        }
        tick = setTimeout("StartThisSessionTimer()", 1000);
    }
</script>