    //btn click event
    //重算-----------------------------------------------------------
    function clicktoReCalculte() {
        $('#maindiv').jqLoading();
        $.getJSON("/PayedRecord/GetReportMonth").done(function (data) {
            $("#sele_Month").empty();
            $("#sele_Month").append($("<option>").val('0').text('請選擇'))
            $.each(data, function (i, item) { $("#sele_Month").append($("<option>").val(item.ReportMonth).text(item.ReportMonth)) });

            $('#maindiv').jqLoading("destroy");
            $('#myModalForReCalculte').modal('show');
        })
    }
    function SubmitForReCalculte() {
        var sele_Month = $("#sele_Month").val();
        if (sele_Month == 0) {
            //alert('請選擇重算月份!')
            sweetAlert("請選擇重算月份!", "", "warning");
            return;
        }
        var obj = {};
        obj.IsReCalculate = true;
        obj.ReCalYeay = sele_Month.split("/")[0];
        obj.ReCalMonth = sele_Month.split("/")[1];
        $('#maindiv').jqLoading();
        var options = {};
        options.url = "/Bonus/ReCalculateBonus";
        options.type = "POST";
        options.data = JSON.stringify(obj);
        options.contentType = "application/json";
        options.dataType = "html";
        options.success = function (data) {
            if (data == 1) {
                //alert('計算完畢!');
                swal("計算完畢!", "", "success")
            } else {
                //alert('計算失敗!');
                sweetAlert("計算失敗!", "", "error");
            }
            $('#maindiv').jqLoading("destroy");
        };
        options.error = function () {
            //alert('計算失敗!');
            sweetAlert("計算失敗!", "", "error");
            $('#maindiv').jqLoading("destroy");
        };
        $.ajax(options);
    }

    //檢視舊報表=--------------------------------
    function View(Report_Ver, Calculate_Quarterly, Calculate_Year) {
        //計算日期
        var date = '';
        switch (Calculate_Quarterly) {
            case '1':
                date = Calculate_Year + '/04/15';
                break;
            case '2':
                date = Calculate_Year + '/07/15';
                break;
            case '3':
                date = Calculate_Year + '/10/15';
                break;
            case '4':
                date = eval(Calculate_Year) + 1 + '/01/15';
                break;
        }

        $("#sele_Report").empty();
        $("#sele_Report").append($("<option>").val('0').text('請選擇'))
        for (var i = 1; i < Report_Ver; i++) {
            $("#sele_Report").append($("<option>").val(i).text(date + '(' + i + ')'))
        }
        $('#myModalForOldReport').modal('show');
    }
